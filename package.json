{
  "name": "next-scheduler",
  "version": "1.0.0",
  "private": true,
  "description": "Next.js Scheduler App with NestJS Backend",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"yarn workspace @scheduler/frontend dev\" \"yarn workspace @scheduler/backend start:dev\"",
    "build": "yarn workspaces foreach run build",
    "build:frontend": "yarn workspace @scheduler/frontend build",
    "build:backend": "yarn workspace @scheduler/backend build",
    "start": "concurrently \"yarn workspace @scheduler/frontend start\" \"yarn workspace @scheduler/backend start:prod\"",
    "lint": "yarn workspaces foreach run lint",
    "test": "yarn workspaces foreach run test",
    "clean": "yarn workspaces foreach run clean && rm -rf node_modules",
    "install:all": "yarn install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.0.0"
  }
} 